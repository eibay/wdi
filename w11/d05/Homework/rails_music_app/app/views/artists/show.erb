<h1><%= artist.name %></h1>
<p><%= artist.genre %>, <%= artist.number_of_albums %></p>

<form action="/artists/<%= artist.id %>" method="POST">
  <label>
    Name:
    <input name="name" value="<%= artist.name %>"/>
  </label>

  <label>
    Genre:
    <input name="genre" value="<%= artist.genre %>"/>
  </label>

  <label>
    Number of albums:
    <input name="number_of_albums" value="<%= artist.number_of_albums %>" />
  </label>

  <input name="_method" value="PUT" type="hidden" />
  <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">

  <button>Edit an Artist</button>
</form>

<br>

<form action="/artists/<%= artist.id %>" method="POST">
  <input name="_method" value="DELETE" type="hidden" />
  <input name="authenticity_token" value="<%= form_authenticity_token() %>" type="hidden">
  <button>Delete an Artist</button>
</form>

<br>

<button><a href="/artists">Go Home</a></button>