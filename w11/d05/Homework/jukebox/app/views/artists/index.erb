<h1>ARTISTS</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Genre</th>
		<th>Album Count</th>
		<th></th>
		<th></th>
	</tr>
	<% artists.each do |artist| %>
	<tr>
		<td><a href="/artists/<%= artist.id %>"><%= artist.name %></a></td>
		<td><%= artist.genre %></td>
		<td><%= artist.number_of_albums %></td>
		<td>
			<form action="/artists/<%= artist.id %>" method="POST">
				<input type="hidden" name="_method" value="DELETE">
				<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
				<button>Delete</button>
			</form>
		</td>
		<td><a href="artists/<%= artist.id %>/songs">All Songs</a></td>
	</tr>
	<% end %>
</table>

<h2>Enter a new artist</h2>
<form action="/artists" method="POST">
	<input name="name" placeholder="Name">
	<input name="genre" placeholder="Genre">
	<input type="number" name="number" placeholder="Number of albums">
	<input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">
	<button>Submit</button>
</form>