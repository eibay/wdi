<html>
<head>
	<title></title>
</head>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">

<!-- Optional theme -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">

<script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>

<body>

<div class="container">


	<h1> Shirts </h1>
	<% shirts.each do |shirt| %>
		<li><%= shirt.name %></li>
		<li><img src = "<%= shirt.imageurl %>"></li>
		<li>$<%= shirt.price %> </li>


<!-- Button trigger modal -->
			<button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#<%=shirt.name%>">
 				 Buy
			</button>

<!-- Modal -->
<div class="modal fade" id="<%=shirt.name%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title" id="myModalLabel"><%= shirt.name %></h4>
      </div>
      <div class="modal-body">
        $ <%= shirt.price %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

      <form method="POST" action="/add_to_order">
        <input type="hidden" name="shirt_orders" value="<%=shirt.id %>">
        <button type="button" class="btn btn-primary">Add to Cart</button>
      </form>
      </div>
    </div>
  </div>
</div>

	<% end %>



</div>

</body>
</html>